<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/doubleDown"
        android:layout_centerVertical="true"
        android:src="@drawable/blackjack" />

    <Button
        android:id="@+id/split"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/insurance"
        android:layout_below="@+id/insurance"
        android:layout_marginRight="14dp"
        android:layout_marginTop="17dp"
        android:text="Split" />

    <Button
        android:id="@+id/doubleDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/split"
        android:layout_alignBottom="@+id/split"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/split"
        android:text="Double Down" />

    <Button
        android:id="@+id/hit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/insurance"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="24dp"
        android:text="Hit" />

    <Button
        android:id="@+id/bet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/hit"
        android:layout_alignBottom="@+id/hit"
        android:layout_alignLeft="@+id/surrender"
        android:text="Bet" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_marginBottom="16dp"
        android:layout_toLeftOf="@+id/bet"
        android:text="TextView" />

    <Button
        android:id="@+id/insurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="17dp"
        android:text="Insurance" />

    <Button
        android:id="@+id/surrender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/insurance"
        android:layout_alignBottom="@+id/insurance"
        android:layout_alignRight="@+id/imageView1"
        android:text="Surrender" />

</RelativeLayout>